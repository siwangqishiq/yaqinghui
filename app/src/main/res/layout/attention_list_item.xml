<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:id="@+id/innerLayout"
    android:background="@drawable/icon_home_bg"
    >
    <ImageView
        android:id="@+id/attention_img"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY" 
        />
    <TextView
        android:id="@+id/attention_text"
        android:textColor="#777777"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/attention_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        />
    <Button
        android:id="@+id/attention_delete_btn"
        android:background="@drawable/del_btn_bg"
        android:textColor="#ffffff"
        android:layout_marginRight="15dp"
        android:textSize="13dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete"
        android:visibility="gone"
        />
    <View
        android:id="@+id/sigline" 
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@drawable/siglines"
        android:layout_alignParentBottom="true"/>
    
</RelativeLayout>